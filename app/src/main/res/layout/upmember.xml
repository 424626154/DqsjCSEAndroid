<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg02">
    <include
        layout="@layout/navigationbar"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/home_item_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row01_h"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/font02"
                android:textColor="@color/color_font02"
                android:text ="会员编号:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mid"
                android:textSize="@dimen/font02"
                android:textColor="@color/color_font03"
                android:text =""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row01_h"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/font02"
                android:textColor="@color/color_font02"
                android:text ="会员帐号:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/account"
                    android:textSize="@dimen/font02"
                    android:textColor="@color/color_font03"
                    android:text =""
                    android:textColorHint="@color/color_bg02"
                    android:hint="输入会员帐号"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row01_h"
                    android:background="@color/color_font01"/>
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_bg02"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row01_h"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/font02"
                android:textColor="@color/color_font02"
                android:text ="会员姓名:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/name"
                    android:textSize="@dimen/font02"
                    android:textColor="@color/color_font03"
                    android:text =""
                    android:textColorHint="@color/color_bg02"
                    android:hint="输入会员姓名"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row01_h"
                    android:background="@color/color_font01"/>
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_bg02"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row01_h"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/font02"
                android:textColor="@color/color_font02"
                android:text ="会员手机:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/phone"
                    android:textSize="@dimen/font02"
                    android:textColor="@color/color_font03"
                    android:text =""
                    android:textColorHint="@color/color_bg02"
                    android:hint="输入会员手机号"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row01_h"
                    android:background="@color/color_font01"/>
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_bg02"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row01_h"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/font02"
                android:textColor="@color/color_font02"
                android:text ="啤酒数量:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/beernum"
                    android:textSize="@dimen/font02"
                    android:textColor="@color/color_font03"
                    android:text =""
                    android:textColorHint="@color/color_bg02"
                    android:hint="输入赠送啤酒数量"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row01_h"
                    android:background="@color/color_font01"/>
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_bg02"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/up"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="修改"
                android:textColor="@color/color_font01"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@drawable/comm_but01"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
